<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SaveActivity"
    android:background="@drawable/gradient_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/indigo"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Event"
                android:textSize="30sp"
                android:fontFamily="@font/lato_bold"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/baseline_task_24"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadEvent"
                android:maxLines="1"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/custom_input_white"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter event name"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadDay"
                android:maxLines="1"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/custom_input_white"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter day"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadDate"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/custom_input_white"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:padding="16dp"
                android:hint="Enter Date"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadTime"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/custom_input_white"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:padding="16dp"
                android:hint="Enter Time"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadPeriod"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/custom_input_white"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:maxLines="1"
                android:hint="AM or PM"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:backgroundTint="@color/teal"
                android:textColor="@color/indigo"
                android:fontFamily="@font/lato_bold"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>